@model ZonaRival.Models.Usuario

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ZonaRival - Inicio de Sesión</title>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="background">
        <!-- Elementos decorativos del fondo -->
        <div class="starball starball-1"></div>
        <div class="starball starball-2"></div>
        
        <!-- Formulario de inicio de sesión -->
        <div class="form-container">
            <div class="form">
                <h1 class="logo">ZonaRival</h1>
                <h2 class="subtitle">Inicio</h2>
                
                <form asp-action="Login" asp-controller="Inicio" method="post">
                    <div class="form-group">
                        <label for="email">Correo</label>
                        <input type="email" id="email" asp-for="Gmail" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="password">Contraseña</label>
                        <input type="password" id="password" asp-for="Contraseña" required>
                    </div>
                    
                    <button type="submit" class="submit-btn">Iniciar Sesión</button>
                </form>

                <!-- Mensaje de error -->
                @if (ViewBag.Error != null)
                {
                    <p style="color:red">@ViewBag.Error</p>
                }
                
                <div class="register-link">
                    <p>¿No tienes cuenta? <a href="registro.html">Registrarse</a></p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
