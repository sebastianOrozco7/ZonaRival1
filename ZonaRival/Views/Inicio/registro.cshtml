@model ZonaRival.Models.ViewModels.RegistroViewModel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ZonaRival - Registro</title>
    <link rel="stylesheet" href="~/css/registro.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="background">
        <!-- Elementos decorativos del fondo -->
        <div class="starball starball-1"></div>
        <div class="starball starball-2"></div>
        
        <!-- Formulario de registro -->
        <div class="form-container">
            <div class="form">
                <h1 class="logo">ZonaRival</h1>
                <h2 class="subtitle">Registro</h2>
                <!-- Bloque para mostrar el mensaje de error -->
                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="error-message" style="color: red; margin-bottom: 15px;">@ViewBag.Error</div>
                }
                
                <form asp-controller="Inicio" asp-action="Registro" method="post" class="registration-form">
                    <div class="form-group">
                        <label for="email">Correo Electrónico</label>
                        <input type="email" id="email" asp-for="usuario.Gmail" required>
                    </div>

                    <div class="form-group">
                        <label for="teamName">Nombre del equipo</label>
                        <input type="text" id="teamName" asp-for="equipo.NombreEquipo" required>
                    </div>

                    <div class="form-group">
                        <label for="playerCount">Cantidad de Jugadores</label>
                        <input type="number" id="playerCount" asp-for="equipo.CantidadJugadores" min="1" max="20" required>
                    </div>

                    <div class="form-group">
                        <label for="ageRange">Rango de edad</label>
                        <select id="ageRange" asp-for="equipo.RangoEdad" required>
                            <option value="">Selecciona un rango de edad</option>
                            <option value="15-20">15 – 20 años</option>
                            <option value="21-25">21 – 25 años</option>
                            <option value="26-30">26 – 30 años</option>
                            <option value="31-35">31 – 35 años</option>
                            <option value="36-40">36 – 40 años</option>
                            <option value="40+">40+ años</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="phone">Teléfono de Contacto</label>
                        <input type="tel" id="phone" asp-for="usuario.Telefono" required>
                    </div>

                    <div class="form-group">
                        <label for="uniformColor">Color de uniforme</label>
                        <input type="text" id="uniformColor" asp-for="equipo.ColorUniforme" required>
                    </div>

                    <div class="form-group">
                        <label for="preferredCourts">Canchas de preferencia</label>
                        <div class="courts-container">
                            <select asp-for="CanchasSeleccionadas[0]" class="form-select" required>
                                <option value="">Selecciona 1ra opción</option>
                                @foreach (var cancha in Model.canchas)
                                {
                                    <option value="@cancha.CanchaId">@cancha.NombreCancha</option>
                                }
                            </select>

                            <select asp-for="CanchasSeleccionadas[1]" class="form-select" required>
                                <option value="">Selecciona 2da opción</option>
                                @foreach (var cancha in Model.canchas)
                                {
                                    <option value="@cancha.CanchaId">@cancha.NombreCancha</option>
                                }
                            </select>

                            <select asp-for="CanchasSeleccionadas[2]" class="form-select" required>
                                <option value="">Selecciona 3ra opción</option>
                                @foreach (var cancha in Model.canchas)
                                {
                                    <option value="@cancha.CanchaId">@cancha.NombreCancha</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password">Contraseña</label>
                        <input type="password" id="password" asp-for="usuario.Contraseña" required>
                        <small class="password-hint" style="color: rgba(255, 255, 255, 0.6); font-size: 0.8rem;">Mínimo 8 caracteres</small>
                    </div>

                    <button type="submit" class="submit-btn" onclick="return validarPassword()">Registrarse</button>

                    <div id="password-error" style="color: red; margin-top: 10px; display: none;"></div>
                    <div asp-validation-summary="All" class="text-danger"></div>

                </form>
                
                <div class="login-link">
                    <p>¿Ya tienes cuenta? <a asp-action="Login" asp-controller="Inicio">Iniciar sesión</a></p>
                </div>
            </div>
        </div>
    </div>

    <script>
        function validarPassword() {
            const password = document.getElementById('password').value;
            const errorDiv = document.getElementById('password-error');

            if (password.length < 8) {
                errorDiv.textContent = 'La contraseña debe tener al menos 8 caracteres.';
                errorDiv.style.display = 'block';
                return false;
            }

            errorDiv.style.display = 'none';
            return true;
        }
    </script>
</body>
</html>
